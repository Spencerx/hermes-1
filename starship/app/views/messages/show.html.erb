
<% @hermestitle = "Hermes message: #{@message.subject}"
   @pagetitle = "Hermes message: #{@message.subject}" %>

<p>
  <b>Date:</b>
  <%=h @message.created.strftime('%d. %B %Y - %H:%M:%S UTC') %> 
  <i>(<%= fuzzy_time_string(@message.created.strftime('%d. %B %Y - %H:%M:%S UTC'), true) %>)</i>
</p>

<p>
  <b>From:</b>
  <%=h @message.sender %>
</p>

<p>
  <b>Subject:</b>
  <%=h @message.subject %>
</p>

<p>
  <pre><%= add_links(h @message.body) %></pre>
</p>

<% if @to_save_comment %>
  <% if @to_save_comment.comment.blank? %>
  <%= link_to_function "Add Comment", "$('commentBox').toggle()" %>
  <% else %>
  <p>
    <b>Comment:</b>
    <%=h @to_save_comment.comment %>
  </p>
  <%= link_to_function "Edit Comment", "$('commentBox').toggle()" %>
  <% end %>
  <div id="commentBox" style="display: none;">
    <%= render(:partial => "commentBox", :object => @to_save_comment) %>
  </div>
<% end %>


