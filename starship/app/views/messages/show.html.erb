<p>
  <b>Msgtype:</b>
  <%=h @message.msg_type.msgtype %>
</p>

<p>
  <b>From:</b>
  <%=h @message.sender %>
</p>

<p>
  <b>Subject:</b>
  <%=h @message.subject %>
</p>

<p>
  <b>Body:</b>
  <%= @message.body %>
</p>

<%# if @to_save_comment.size > 0 and @to_save_comment[0].comment.nil? and @is_subscribed %>
<% if @to_save_comment and @is_subscribed %>
	<% if !@to_save_comment.comment.nil? %>
		<p>
			  <b>Comment:</b>
			  <%=h @to_save_comment.comment %>
		</p>
	<% end %>

<% end %>


<%# if @to_save_comment.size > 0 and @is_subscribed %>
<% if @to_save_comment and @is_subscribed %>
	<% if @to_save_comment.comment.nil? %>
		<%= link_to_remote "Add Comment", :url => { :action => :show_comment_box } %>
	<% else %>
		<%= link_to_remote "Edit Comment", :url => { :action => :show_comment_box } %>
	<% end %>

	<div id="commentBox" style="display: none;">
		<%= render(:partial => "commentBox", :object => @to_save_comment) %>
	</div>

<% end %>

<%= link_to 'Index', :controller => 'msg_types', :action => "show", :id => @message.msg_type.id %>

