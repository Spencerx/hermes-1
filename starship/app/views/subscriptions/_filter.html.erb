<tr class="filter_line">
  <td><%= render :partial => 'filter_param', :locals => {:indx => indx, :param_list => parameter_list, :selected => selected_param } %></td>
  <td><%= select_tag 'filter_operator_' + indx , options_for_select($OPERATORS,selected_oper), {:class => 'filter_select', :title => "Operator"} %></td>
  <td><b>Value: </b></td>
  <td><%= text_field_tag "filter_value_" + indx, value, :class => 'filter_value_input', :size => '40' %></td>
  <td><%= link_to_function "Remove", "remove_filter(this)" %></td>
</tr>
